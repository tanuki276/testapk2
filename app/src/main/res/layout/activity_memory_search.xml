<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/module_panel_bg"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_memory_scan" 
        android:textColor="@color/core_text_primary"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/search_value_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Value or Range (e.g., 9999 or 100~200)"
        android:textColorHint="@color/core_text_secondary"
        android:textColor="@color/core_text_primary"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Spinner
            android:id="@+id/data_type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/data_types"
            android:background="#333333"/>

        <Spinner
            android:id="@+id/search_type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/search_types"
            android:background="#333333"/>

    </LinearLayout>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Scan / Search"
        android:background="#444444"
        android:textColor="#FFFFFF"/>

    <ListView
        android:id="@+id/results_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/core_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/refine_filter_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/refine_filters"
            android:background="#333333"/>

        <Button
            android:id="@+id/refine_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Refine"
            android:background="#444444"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/freeze_dump_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Freeze/DUMP" 
            android:background="@color/alert_fatal"
            android:textColor="@color/core_background"/>
    </LinearLayout>
</LinearLayout>
